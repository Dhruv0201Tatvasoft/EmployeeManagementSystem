<UserControl x:Class="EmployeeManagementSystem.UserControls.DashboardWindow"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:EmployeeManagementSystem.UserControls"
             mc:Ignorable="d" 
             xmlns:chart="clr-namespace:System.Windows.Controls.DataVisualization.Charting;assembly=DotNetProjects.DataVisualization.Toolkit"
             d:DesignHeight="450" d:DesignWidth="800" Background="White">
    <Grid >
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width=".5*"/>
            <ColumnDefinition Width=".5*"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height=".5*"/>
            <RowDefinition Height=".5*"/>
        </Grid.RowDefinitions>
        <chart:Chart Grid.Column="0" Grid.Row="0" DataContext="{Binding YourDataCollection}">
            <chart:PieSeries ItemsSource="{Binding}" 
                                   DependentValuePath="Value" 
                                   IndependentValuePath="Key">
                <chart:PieSeries.DataPointStyle>
                    <Style TargetType="Control">
                        <!-- Apply specific colors for each category -->
                        <Style.Triggers>
                            <DataTrigger Binding="{Binding Key}" Value="Category 1">
                                <Setter Property="Background" Value="#FF3366FF" />
                            </DataTrigger>
                            <DataTrigger Binding="{Binding Key}" Value="Category 2">
                                <Setter Property="Background" Value="#FFFF6633" />
                            </DataTrigger>
                            <DataTrigger Binding="{Binding Key}" Value="Category 3">
                                <Setter Property="Background" Value="#FF33CC33" />
                            </DataTrigger>
                            <!-- Add more triggers for other categories -->
                        </Style.Triggers>
                    </Style>
                </chart:PieSeries.DataPointStyle>
            </chart:PieSeries>
        </chart:Chart>
    </Grid>
</UserControl>
